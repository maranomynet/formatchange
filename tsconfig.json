{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["dom", "esnext"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "strict": true, // Don't be daft. Always be strict.
    "noUncheckedIndexedAccess": true // Should be part of strict
  },
  "exclude": ["node_modules", "dist"],
  "include": ["**/*.ts", "**/*.tsx"]
}
